<%= render "shared/header" %>
  <!-- サイドバー -->
  <% if user_signed_in? %>
    <%= render 'layouts/sidebar' %>
  <% end %>
  <!-- サイドバー -->

<!-- 記録の一覧表示 -->
<div class="records-container">
  <% @records.each do |record| %>
      <% retention_class = "retention-level-#{record.retention_level_id}" %>
      <div class="record-title">
        <%= link_to record.title, record_path(record), class: 'title-link' %>
      </div>
    <div class="record <%= retention_class %>">
      <div class="record-description">
        <p class="description-space"><%= record.description %></p>
        <%= link_to "編集", "#" , method: :get, class: "record-blue-btn" %>
        <%= link_to "削除", "#", data: {turbo_method: :delete}, class:"record-destroy" %>
      </div>
      <div class="record-date">
        投稿(更新)日時: <%= record.created_at.strftime("%Y-%m-%d %H:%M") %>
      </div>
    </div>
  <% end %>
</div>
<!-- 記録の一覧表示 -->
