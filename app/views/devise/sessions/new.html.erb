<%= render "shared/second-header"%>
<body>
  
  <%= form_with model: @user, url: user_session_path, class: 'session-main', local: true do |f| %>
  <div class='form-wrap2'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        会員情報入力
      </h1>
    </div>
    <%= render 'devise/shared/error_messages', model: f.object %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"例) hibi太", maxlength:"40", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"PC・携帯どちらでも可" %>
    </div>
  
  
    <div class="login-btn">
      <%= f.submit "ログイン" , class:"login-blue-btn"%>
      <% end %>
    </div>

        <!-- 新規会員登録へのリンクをここに追加 -->
    <div class="register-link">
      ※新規会員登録が済んでいない方は<a href="<%= new_user_registration_path %>">こちら</a>
    </div>
    
  </div>
</body>


